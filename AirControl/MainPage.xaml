<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirControl.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="aircon.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="am image of air conditioner" />

            <Button
                x:Name="ConnectionBtn"
                Text="Connect" 
                SemanticProperties.Hint="Connect to MqttBroker"
                Clicked="SendMessageToMqttBroker"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
